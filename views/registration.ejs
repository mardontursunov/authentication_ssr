<%- include('parts/header.ejs' )%>

<main class="container text-center mt-4">
    <h1>Registration</h1>
    <div class="row">
        <div class="col-lg-6 col-12 mx-auto">
            <% if(error) { %>
                <div class="alert alert-danger"> <%= error %> </div>
            <% } %>
            <form action="/registration" method="POST">
                <div class="form-floating mb-3">
                    <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com" autocomplete="off" required>
                    <label for="floatingInput">Email address</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="text" name="name" class="form-control" id="floatingInput" placeholder="name@example.com" autocomplete="off" required minlength="3">
                    <label for="floatingInput">Fullname</label>
                </div>
                <div class="form-floating">
                    <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password" autocomplete="off" required minlength="6">
                    <label for="floatingPassword">Password</label>
                </div>
                <button class="btn btn-primary w-100 mt-3" type="submit">Register</button>
            </form>
        </div>
    </div>
</main>
<%- include('parts/footer.ejs' )%>